<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="5px">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="New Password" />

	<EditText android:id="@+id/edtNewPass" android:layout_width="fill_parent"
		android:password="true" android:imeOptions="flagNoExtractUi"
		android:maxLength="4"
		android:inputType="phone"
		android:digits="0123456789"
		android:layout_height="wrap_content" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Confirm Password" />

	<EditText android:id="@+id/edtConfirmPass" android:password="true"
		android:imeOptions="flagNoExtractUi" android:layout_width="fill_parent"
		android:maxLength="4"
		android:inputType="phone"
		android:digits="0123456789"
		android:layout_height="wrap_content" />

</LinearLayout>