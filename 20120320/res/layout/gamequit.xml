<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="700px" android:orientation="vertical"
		android:background="@drawable/ending">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="right"
			android:orientation="horizontal" android:layout_margin="30px">

			<Button android:id="@+id/btnMain" android:text="@string/menuMain"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#083762" android:onClick="onClick"
				android:background="@drawable/custombtn" android:textSize="25px" />

			<Button android:id="@+id/btnShutdown" android:text="@string/menuSysOff"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#083762" android:onClick="onClick"
				android:background="@drawable/custombtn" android:textSize="25px" />
		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="left"
			android:layout_marginTop="300px" android:orientation="horizontal"
			android:layout_marginLeft="30px">

			<TextView android:id="@+id/txtName" android:text=" "
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#083762" android:textSize="30px" />

			<TextView android:text="@string/gameQuitWho" android:layout_width="wrap_content"
				android:textColor="#083762" android:layout_height="wrap_content"
				android:textSize="30px" />
		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content"
			android:layout_marginLeft="30px" android:layout_height="wrap_content"
			android:layout_gravity="left" android:layout_marginTop="10px"
			android:orientation="horizontal">

			<TextView android:id="@+id/txtPlayTime" android:text=" "
				android:textColor="#083762" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="30px" />

			<TextView android:text="@string/gameQuitWhile" android:layout_width="wrap_content"
				android:textColor="#083762" android:layout_height="wrap_content"
				android:textSize="30px" />
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
			android:layout_marginLeft="30px" android:layout_height="wrap_content"
			android:layout_gravity="left" android:layout_marginTop="10px"
			android:orientation="horizontal">

			<TextView android:id="@+id/txtScore" android:text=" "
				android:textColor="#083762" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="30px" />

			<TextView
			    android:id="@+id/txtGameQuit" 
			    android:text=" " android:layout_width="wrap_content"
				android:textColor="#083762" android:layout_height="wrap_content"
				android:textSize="30px" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="horizontal"
		android:gravity="right"
		 android:background="#ffffff">

		<Button android:id="@+id/btnReplay" android:text="@string/gameQuitReplay"		
			android:layout_gravity="right" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#083762"
			android:background="@drawable/custombtn" android:onClick="onClick"
			android:textSize="25px" />
		<Button android:id="@+id/btnPlayOther" android:text="@string/gameQuitOtherGame"
		android:layout_marginRight="30px"
			android:layout_gravity="right" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#083762"
			android:background="@drawable/custombtn" android:onClick="onClick"
			android:textSize="25px" />
	</LinearLayout>
</LinearLayout>